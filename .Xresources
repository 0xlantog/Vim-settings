!! Appearance
URxvt.termName:   rxvt-unicode
URxvt.scrollBar:  false
Xft.dpi:          96
Xft.antialias:    true
Xft.rgba:      	  rgb
Xft.hinting:      true
Xft.hintstyle:    hintslight

!! Transparency settings
URxvt.transparent:     true
URxvt.shading:         10
URxvt.depth:           32
!! URxvt.inheritPixmap: true

!! Fonts
!!URxvt.font:        xft:Monaco:pixelsize=15:antialias=true,xft:monospace
!!URxvt.boldFont:    xft:Monaco:pixelsize=15:weight=bold:antialias=true,xft:monospace

URxvt.font:        xft:PxPlus IBM VGA8:pixelsize=16:antialias=true,xft:monospace
URxvt.boldFont:    xft:PxPlus IBM VGA8:pixelsize=16:weight=bold:antialias=true,xft:monospace
URxvt.letterSpace: -1

!! Larger history limit
URxvt.saveLines:  1000000

